<div class="container mx-auto py-6 max-w-3xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">New Pizza</h1>

  <%= form_with(model: @pizza, local: true) do |form| %>
    <%= render 'form', form: form, field: :name, label: 'Pizza Name' %>
    <%= render 'form', form: form, field: :topping_ids, label: 'Toppings' %>

    <div class="mt-6">
      <%= form.submit 'Create Pizza', class: 'w-full py-2 px-4 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50' %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to 'Back', pizzas_path, class: 'text-blue-500 hover:text-blue-700' %>
  </div>
</div>
