<% if flash[:notice] %>
  <div class="alert alert-success bg-green-100 text-green-800 px-4 py-3 rounded mb-1 text-center">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger bg-red-100 text-red-800 px-4 py-3 rounded mb-1 text-center">
    <%= flash[:alert] %>
  </div>
<% end %>
