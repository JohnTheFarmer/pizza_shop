<nav class="bg-gray-800 text-white py-4 sticky top-0 z-50">
  <div class="max-w-4xl mx-auto flex justify-between items-center px-4">
    <!-- Logo or Brand Name -->
    <a href="/" class="text-2xl font-semibold hover:text-gray-400">Pizza Store</a>

    <!-- Navigation Links -->
    <div class="space-x-6 hidden sm:flex">
      <% if user_signed_in? %>
        <% if current_user.role == 'owner' %>
          <%= link_to 'Manage Pizzas', pizzas_path, class: 'hover:text-gray-400' %>
          <%= link_to 'Manage Toppings', toppings_path, class: 'hover:text-gray-400' %>
        <% elsif current_user.role == 'chef' %>
          <%= link_to 'Manage Pizzas', pizzas_path, class: 'hover:text-gray-400' %>
        <% elsif current_user.role == 'customer' %>
          <%= link_to 'Home', root_path, class: 'hover:text-gray-400' %>
        <% end %>
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'hover:text-red-400' %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'hover:text-green-400' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'hover:text-blue-400' %>
      <% end %>
    </div>

    <!-- Mobile Menu Button (for smaller screens) -->
    <button class="sm:hidden text-white focus:outline-none" id="mobile-menu-button">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="sm:hidden bg-gray-800 text-white p-4" id="mobile-menu" style="display: none;">
    <% if user_signed_in? %>
      <% if current_user.role == 'owner' %>
        <%= link_to 'Manage Pizzas', pizzas_path, class: 'block py-2 px-4 hover:text-gray-400' %>
        <%= link_to 'Manage Toppings', toppings_path, class: 'block py-2 px-4 hover:text-gray-400' %>
      <% elsif current_user.role == 'chef' %>
        <%= link_to 'Manage Pizzas', pizzas_path, class: 'block py-2 px-4 hover:text-gray-400' %>
      <% elsif current_user.role == 'customer' %>
        <%= link_to 'Home', root_path, class: 'block py-2 px-4 hover:text-gray-400' %>
      <% end %>
      <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'block py-2 px-4 hover:text-red-400' %>
    <% else %>
      <%= link_to 'Login', new_user_session_path, class: 'block py-2 px-4 hover:text-green-400' %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'block py-2 px-4 hover:text-blue-400' %>
    <% end %>
  </div>
</nav>

<!-- Script to toggle mobile menu visibility -->
<script>
  document.getElementById("mobile-menu-button").addEventListener("click", function() {
    const menu = document.getElementById("mobile-menu");
    menu.style.display = menu.style.display === "none" || menu.style.display === "" ? "block" : "none";
  });
</script>
