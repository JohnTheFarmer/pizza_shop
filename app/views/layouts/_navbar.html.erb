    <div class="bg-gray-800 text-white py-4 sticky top-0 z-50">
      <div class="max-w-4xl mx-auto flex justify-between items-center px-4">
        <!-- Logo or Brand Name (optional) -->
        <a href="/" class="text-2xl font-semibold hover:text-gray-400">Pizza Store</a>

        <!-- Navigation Links -->
        <div class="space-x-6 hidden sm:flex">
          <% if user_signed_in? %>
            <% if current_user.role == 'owner' %>
              <%= link_to 'Manage Pizzas', pizzas_path, class: 'hover:text-gray-400' %>
              <%= link_to 'Manage Toppings', toppings_path, class: 'hover:text-gray-400' %>
            <% elsif current_user.role == 'chef' %>
              <%= link_to 'Manage Pizzas', pizzas_path, class: 'hover:text-gray-400' %>
            <% elsif current_user.role == 'customer' %>
              <%= link_to 'Home', root_path, class: 'hover:text-gray-400' %>
            <% end %>
            <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'hover:text-red-400' %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'hover:text-green-400' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'hover:text-blue-400' %>
          <% end %>
        </div>
      </div>
    </div>
