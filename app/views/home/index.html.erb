<!-- Main Container with Welcome Message and Pizza List -->
<div class="max-w-4xl mx-auto relative">

  <!-- Container for Welcome Message -->
  <div class="text-center mb-12">
    <!-- Welcome Message -->
    <h1 class="text-4xl font-bold text-gray-800 mt-5">Welcome to Our Pizza Store!</h1>
    <p class="mt-3 text-mg text-gray-600">Explore our delicious pizzas below.</p>
  </div>

  <!-- Display List of Pizzas in a Grid (Max 3 Per Row) -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
    <% @pizzas.each do |pizza| %>
      <div class="bg-white shadow-lg rounded-xl p-6 flex flex-col h-full">
        <h3 class="text-3xl font-semibold text-red-500 mb-3 "><%= pizza.name %></h3>

        <!-- Display toppings if available, otherwise show message -->
        <p class="text-sm text-gray-600">
          <%= pizza.toppings.any? ? pizza.toppings.map(&:name).join(', ') : 'No toppings added yet.' %>
        </p>
      </div>
    <% end %>
  </div>
</div>
