<!-- Main Container with Welcome Message and Pizza List -->
<div class="max-w-4xl mx-auto relative">
  
  <!-- Container for Welcome Message -->
  <div class="text-center mb-12">
    <!-- Welcome Message -->
    <h1 class="text-5xl font-bold text-gray-800">Welcome to Our Pizza Store!</h1>
    <p class="mt-3 text-lg text-gray-600">Explore our delicious pizzas below.</p>
  </div>

  <!-- Display List of Pizzas in a Grid (Max 3 Per Row) -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
    <% @pizzas.each do |pizza| %>
      <div class="bg-white shadow-lg rounded-xl p-8">
        <h3 class="text-3xl font-semibold text-gray-800 mb-3"><%= pizza[:name] %></h3>
        <p class="text-gray-600 mb-2"><%= pizza[:description] %></p>
        

      </div>
    <% end %>
  </div>
</div>
