<div class="container mx-auto py-4">
  <h1 class="text-3xl font-bold">Edit Topping</h1>
  <%= form_with model: @topping, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Topping Name' %>
      <%= form.text_field :name, class: 'input input-bordered' %>
    </div>

    <div class="form-group">
      <%= form.label :description, 'Description (Optional)' %>
      <%= form.text_area :description, class: 'input input-bordered' %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit 'Update Topping', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
