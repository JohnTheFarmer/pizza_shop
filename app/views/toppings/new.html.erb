<div class="container mx-auto py-6 max-w-3xl">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">New Topping</h1>

  <%= form_with model: @topping, local: true do |form| %>
    <div class="mb-6">
      <%= form.label :name, 'Topping Name', class: 'block text-sm font-semibold text-gray-700' %>
      <%= form.text_field :name, class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
    </div>

    <div class="mb-6">
      <%= form.label :description, 'Description (Optional)', class: 'block text-sm font-semibold text-gray-700' %>
      <%= form.text_area :description, class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
    </div>

    <div class="mt-6">
      <%= form.submit 'Create Topping', class: 'w-full py-2 px-4 bg-green-500 text-white font-semibold rounded-lg shadow-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50' %>
    </div>
  <% end %>
</div>
