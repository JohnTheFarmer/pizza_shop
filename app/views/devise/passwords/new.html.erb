<div class="max-w-md mx-auto py-8">
  <h2 class="text-3xl font-bold text-center mb-4">Forgot Your Password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
    <% if flash[:alert] %>
      <div class="text-red-600 bg-red-100 p-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, class: 'block text-sm font-semibold text-gray-700' %>
      <%= f.email_field :email, autofocus: true, class: 'w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-600' %>
    </div>

    <div>
      <%= f.submit 'Send me reset instructions', class: 'w-full py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700' %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p class="text-sm text-gray-600">Remembered your password?</p>
    <%= link_to 'Log in', new_session_path(resource_name), class: 'text-blue-600 hover:underline' %>
  </div>
</div>
